<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#E2E3E4"
    tools:context="com.alicia.delishdemo102.MealChoice">
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="@color/gray"
        android:text="Select your meal"
        android:textSize="20dp"
        android:layout_margin="10dp"
        android:gravity="center"/>
    <View android:id="@+id/fakeView"
        android:layout_below="@+id/title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"/>
    <Button
        android:layout_width="160dp"
        android:layout_below="@+id/title"
        android:layout_height="160dp"
        android:background="@drawable/breakfast"
        android:layout_alignParentLeft="true"
        android:id="@+id/spon1"/>
    <Button
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_below="@+id/title"
        android:layout_alignParentRight="true"
        android:id="@+id/spon2"
        android:background="@drawable/lunch"/>
    <Button
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_alignParentLeft="true"
        android:id="@+id/dinner"
        android:layout_below="@+id/spon1"
        android:background="@drawable/dinner"
        android:layout_marginTop="10dp"
        />
    <Button
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginLeft="5dp"
        android:layout_alignParentRight="true"
        android:id="@+id/dessert"
        android:background="@drawable/dessert"
        android:layout_below="@+id/spon2"
        android:layout_marginTop="10dp"
        android:layout_weight="1"/>
    <Button
        android:id="@+id/any"
        android:layout_below="@+id/dinner"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="75dp"
        android:background="@color/green"
        android:text="Any"
        android:textSize="20dp"
        android:textColor="#FFFFFF"/>
</RelativeLayout>