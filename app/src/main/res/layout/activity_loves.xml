<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E2E3E4"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.alicia.delishdemo102.Loves">
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Loves"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_margin="10dp"/>
    <TextView
        android:id="@+id/msg"
        android:layout_below="@id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Looks like you haven't saved anything! Add your favourite dishes by clicking the heart button in the corner."
        android:textColor="@color/gray"
        android:gravity="center"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/t1"
        android:layout_width="190dp"
        android:layout_height="170dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/title"
        android:background="@drawable/food1"
        android:visibility="gone"/>

    <Button
        android:id="@+id/b1"
        android:layout_width="190dp"
        android:layout_height="170dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/title"
        android:layout_toRightOf="@+id/t1"
        android:background="@drawable/text"
        android:visibility="gone"/>

</RelativeLayout>
